{
	"manifest_version": 3,
	"name": "Shortcut Manager",
	"version": "0.0.1",
	"description": "Create macros for various actions",
	"permissions": [
		"tabs",
		"webNavigation",
		"webRequest",
		"contextMenus",
		"storage",
		"unlimitedStorage",
		"alarms"
	],
	"icons": {
		"24": "icons/icon-24.png",
		"36": "icons/icon-36.png",
		"48": "icons/icon-48.png"
	},
	"action": {
		"default_popup": "index.html"
	},
	"background": {
		"service-worker": "service-worker.js"
	}
}
